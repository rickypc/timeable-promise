{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "checkJs": false,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "paths": {
      "#root/*": [
        "./*"
      ]
    },
    "skipLibCheck": true,
    "strict": true,
    "target": "es2024"
  },
  "include": [
    "*.config.js",
    "src",
    "tests"
  ]
}
