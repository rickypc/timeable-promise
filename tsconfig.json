{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "checkJs": false,
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "outDir": "dist",
    "paths": {
      "#root/*": [
        "*"
      ],
      "timeable-promise": [
        "src/index.ts"
      ]
    },
    "skipLibCheck": true,
    "strict": true,
    "target": "es2024"
  },
  "include": [
    "*.config.[jt]s",
    "src",
    "tests"
  ]
}
